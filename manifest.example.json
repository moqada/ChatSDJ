{
  "display_information": {
    "name": "ChatSDJ",
    "description": "チャット相談所へようこそ。どんなことでもま〜るくおさめまっせ。",
    "background_color": "#2c2d30"
  },
  "features": {
    "bot_user": {
      "display_name": "ChatSDJ",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "app_mentions:read",
        "chat:write",
        "chat:write.customize",
        "channels:history",
        "files:write"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://example.com/slack-events",
      "bot_events": ["app_mention"]
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
